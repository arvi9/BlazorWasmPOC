@page "/"

@inject HttpClient httpClient

<PageTitle>Admin</PageTitle>

<h1>Welcome to the Admin app.</h1>

<button @onclick="GetMessageAsync">Click Me</button>
<label>@message</label>

@code {
    private string message;

    private async Task GetMessageAsync()
    {
        HttpResponseMessage response = await httpClient.GetAsync("message/admin");
        message = await response.Content.ReadAsStringAsync();
    }
}

